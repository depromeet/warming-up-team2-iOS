{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
